        // Adicione código JavaScript aqui, se necessário
        // Por exemplo, para mostrar um modal ao clicar em "Adicionar Usuário"
        document.querySelector('.add-user-btn').addEventListener('click', function () {
            // Implemente a lógica para mostrar um modal ou realizar outra ação desejada
            alert('Implemente a lógica para adicionar um usuário');
        });
    </script>
}
