<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["BarSplitter app"] - BarSplitterMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BarSplitterMVC.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400500700&display=swap" rel="stylesheet">
    <style>

        ::-webkit-scrollbar-thumb {
            background: grey;
            border-radius: 10px;
        }

        ::-webkit-scrollbar {
            height: 8px;
            width: 8px;
        }

        /* Estilizacoes globais*/
        body {
            background-color: #1a557f;
            font-family: 'Nunito', sans-serif;
        }

        /*NavBar*/
        .navlogin {
        }



        /* Estilizacoes da home  */
        .card-header {
            background-color: #f8f9fa;
            border-bottom: 0;
        }

        .card-body {
            font-size: 0.9rem;
            color: #6c757d;
        }

        /* Espaçamento extra para os botões, se necessário */
        .btn-dark {
            margin-top: 10px;
            margin-bottom: 10px;
        }

        /* Ajuste este estilo para corresponder ao seu logo */
        .logo {
            width: 50px; /* Ajuste conforme o tamanho do seu logo */
            height: 50px;
            background-color: #ccc;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
        }

        /* Estilização adicional se necessário */

        /* Estilizacoes da mesa */

        .titlesMesa {
            font-family: 'Nunito';
            font-weight: 600;
            font-size: 36px;
        }

        .subTitleMesa {
            font-family: 'Nunito';
            font-size: 26px;
            font-weight: 500;
        }

        .main {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        #quadrado-branco {
            background-color: #FFFFFF;
            padding: 20px;
            border-radius: 19px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.4);
            margin-top: 30px;
            padding-bottom: 4%;
        }


        .dashboard {
            background-color: #f8f9fa;
            border-radius: 15px;
            padding: 30px;
            margin-top: 20px;
        }

        .logo {
            width: 80px;
            height: 80px;
            background-color: #dee2e6;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 5px;
        }

            .logo img {
                max-width: 100%; /* Garante que a imagem não exceda o espaço do logo */
                max-height: 100%;
                border: 6px solid;
            }

                .logo img:hover {
                    border: 6px solid #ff9117;
                    transform: scale(1.1);
                }

        .info-box {
            padding: 20px;
            border: 1px solid #827373;
            background-color: #f9f9f9;
            border-radius: 15px;
            margin-bottom: 10px;
        }

        .list-group {
            display: flex;
            flex-direction: column;
            padding-left: 0;
            margin-bottom: 0;
            border-radius: 0.25rem;
            height: 265px;
            margin-top: 3%;
            overflow-y: auto;
        }

        li.list-group-item.user-list-item {
            width: 98%;
        }

        .list-group-item {
            position: relative;
            display: block;
            padding: 0.5rem 1rem;
            color: #212529;
            text-decoration: none;
            background-color: #fff;
            border: 1px solid rgba(0,0,0,.125);
            margin-bottom: 3%;
            padding: 10px;
            border-radius: 15px;
            border-top-left-radius: 15px !important;
            border-top-right-radius: 15px !important;
        }

        .add-user-btn {
            position: relative;
            left: 50%;
            transform: translate(-50%, 0px);
            top: 4%;
        }

        .rounded-circle {
            border-radius: 60px !important;
        }

        .nav-link:hover {
            font-size: 16px !important;
            color: #ff9117 !important;
        }
        /* ********* */


    </style>


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom" style="color: #fff !important;background-color: #212529;border-color: #212529;">
            <div class="container-fluid">
                @* <a class="navbar-brand text-black" asp-area="" asp-controller="Home" asp-action="Index">BarSplitter</a> *@
                <a class="navbar-brand text-black" style="width: 20%;" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/css/logoTxt.png" style="width: 100%;" /></a>


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" style="font-size: 14px;color: #fff !important;" asp-area="" asp-controller="Home" asp-action="Index">Pagina inicial</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="font-size: 14px;color: #fff !important;" asp-area="" asp-controller="Mesa" asp-action="Index">Mesa</a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center ml-auto">
                        <!-- Contêiner para a imagem e os links -->
                        <!-- Links dispostos horizontalmente com texto menor -->
                        <a class="navlogin nav-link small mr-2" href="LINK_PARA_MINHA_CONTA" style="font-size: smaller;color: #fff !important;">Minha Conta</a>
                        <a class="navlogin nav-link small" href="LINK_PARA_LOGOUT" style="font-size: smaller;color: #fff !important;">Log out</a>
                    </div>
                    <!-- Imagem do usuário -->
                    <a class="nav-item" href="#">
                        <img src="~/css/user.png" width="40" height="40" class="rounded-circle" alt="User">
                    </a>
                </div>




            </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="color: #fff !important;background-color: #212529;border-color: #212529;">
        <div class="container">
            &copy; 2023 - BarSplitterMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
