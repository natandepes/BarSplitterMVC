<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["BarSplitter app"] - BarSplitterMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BarSplitterMVC.styles.css" asp-append-version="true" />
    <style>


        /* Estilizacoes globais*/
        body {
            background-color: #395366;
        }

        /*Logo NavBar*/
        

        /* Estilizacoes da home  */
        .card-header {
            background-color: #f8f9fa;
            border-bottom: 0;
        }

        .card-body {
            font-size: 0.9rem;
            color: #6c757d;
        }

        /* Espaçamento extra para os botões, se necessário */
        .btn-dark {
            margin-top: 10px;
            margin-bottom: 10px;
        }

        /* Ajuste este estilo para corresponder ao seu logo */
        .logo {
            width: 50px; /* Ajuste conforme o tamanho do seu logo */
            height: 50px;
            background-color: #ccc;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
        }

        /* Estilização adicional se necessário */

        /* Estilizacoes da mesa */

       

        .main {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        #quadrado-branco {
            background-color: #FFFFFF;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .button {
        
        }

        .dashboard {
            background-color: #f8f9fa; /* Cor de fundo cinza claro */
            border-radius: 8px; /* Bordas arredondadas */
            padding: 20px; /* Espaçamento interno */
            margin-top: 20px; /* Espaçamento externo acima */
        }

        .logo {
            width: 80px; /* Largura fixa para os logos */
            height: 80px; /* Altura fixa para os logos */
            background-color: #dee2e6; /* Cor de fundo para os espaços dos logos */
            border-radius: 50%; /* Torna os logos circulares */
            display: flex; /* Permite centralizar o conteúdo dentro do logo */
            align-items: center; /* Centraliza verticalmente o conteúdo dentro do logo */
            justify-content: center; /* Centraliza horizontalmente o conteúdo dentro do logo */
            margin: 5px; /* Espaçamento ao redor dos logos */
        }

            .logo img {
                max-width: 100%; /* Garante que a imagem não exceda o espaço do logo */
                max-height: 100%;
            }


    </style>
    

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom" style="background-color: #A3D7FF;">
            <div class="container-fluid">
                <a class="navbar-brand text-black" asp-area="" asp-controller="Home" asp-action="Index">BarSplitter</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="" asp-controller="Home" asp-action="Index">Pagina inicial</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="" asp-controller="Mesa" asp-action="Index">Mesa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="" asp-controller="Jogo" asp-action="Index">Jogo</a>
                        </li>
                    </ul>
                <div class="ml-auto">
                    <a class="nav-item nav-link" href="#">
                    <img src="https://randomuser.me/api/portraits/men/75.jpg" width="40" height="40" class="rounded-circle" alt="User">
                    </a>
                </div>
                   
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - BarSplitterMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
